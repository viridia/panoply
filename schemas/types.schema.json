{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://viridia.org/faery/types.schema.json",
  "title": "Types",
  "description": "Common type definitions",
  "definitions": {
    "Vec2": {
      "type": "array",
      "minItems": 2,
      "maxItems": 2,
      "items": {
        "type": "number"
      }
    },
    "Vec3": {
      "type": "array",
      "minItems": 3,
      "maxItems": 3,
      "items": {
        "type": "number"
      }
    },
    "Vec4": {
      "type": "array",
      "minItems": 4,
      "maxItems": 4,
      "items": {
        "type": "number"
      }
    },
    "Color": {
      "type": "string",
      "pattern": "^#[0-9A-Fa-f]{6}$"
    },
    "Location": {
      "type": "object",
      "properties": {
        "realm": {
          "type": "string"
        },
        "x": {
          "type": "number"
        },
        "y": {
          "type": "number"
        },
        "z": {
          "type": "number"
        }
      },
      "required": ["realm", "x", "y", "z"],
      "additionalProperties": false
    },
    "StageId": {
      "oneOf": [
        {
          "type": "string",
          "minLength": 1,
          "pattern": "^[A-Za-z_][A-Za-z0-9_\\.\\-]*$"
        },
        { "type": "integer" },
        { "type": "null" }
      ]
    },
    "StageRange": {
      "type": "array",
      "maxItems": 2,
      "items": {
        "$ref": "#/definitions/stageId"
      }
    },
    "StagePredicate": {
      "oneOf": [
        {
          "$ref": "#/definitions/stageId"
        },
        {
          "type": "array",
          "minItems": 1,
          "items": {
            "$ref": "#/definitions/stageRange"
          }
        }
      ]
    },
    "SideEffect": {
      "type": "object",
      "properties": {
        "action": {
          "type": "string"
        },
        "params": {
          "type": "object",
          "patternProperties": {
            "^[A-Za-z_][A-Za-z0-9_\\.]*$": {
              "oneOf": [
                { "type": "string" },
                { "type": "boolean" },
                { "type": "number" }
              ]
            }
          },
          "additionalProperties": false
        }
      },
      "required": ["action"],
      "additionalProperties": false
    },
    "SideEffects": {
      "type": "array",
      "items": {
        "$ref": "#/definitions/sideEffect"
      }
    },
    "SceneryComponent": {
      "type": "object",
      "properties": {
        "asset": {
          "type": "string",
          "pattern": "^[A-Za-z_][A-Za-z0-9_\\.\\-/]*\\.glb#[A-Za-z_][A-Za-z0-9_\\.\\-]*$"
        },
        "offset": {
          "type": "array",
          "minItems": 3,
          "maxItems": 3,
          "items": {
            "type": "number"
          }
        },
        "x_rotation": {
          "type": "number"
        },
        "y_rotation": {
          "type": "number"
        },
        "z_rotation": {
          "type": "number"
        },
        "x_rotation_variance": {
          "type": "number"
        },
        "y_rotation_variance": {
          "type": "number"
        },
        "z_rotation_variance": {
          "type": "number"
        },
        "scale": {
          "type": "number"
        },
        "scale_variance": {
          "type": "number"
        }
      },
      "required": ["asset"],
      "additionalProperties": false
    },
    "ColliderDesc": {
      "type": "object",
      "properties": {
        "shape": {
          "enum": ["box", "rbox", "sphere", "ellipsoid", "ramp", "cylinder"]
        },
        "type": {
          "enum": [
            "solid",
            "door",
            "ladder",
            "sensor",
            "hint",
            "portal",
            "marker"
          ]
        },
        "size": {
          "$ref": "#/definitions/Vec3"
        },
        "offset": {
          "$ref": "#/definitions/Vec3"
        },
        "facing": {
          "type": "number"
        },
        "pickable": {
          "type": "boolean"
        },
        "animation": {
          "type": "string"
        },
        "origin": {
          "$ref": "#/definitions/Vec3"
        },
        "walkable": {
          "type": "boolean"
        },
        "margin": {
          "type": "number"
        }
      },
      "required": ["shape"],
      "additionalProperties": false
    }
  }
}
