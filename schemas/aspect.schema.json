{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://viridia.org/faery/aspects.schema.json",
  "title": "Aspects",
  "description": "Aspect Schema",
  "type": "object",
  "properties": {
    "StdFloorSurface": {
      "type": "object",
      "properties": {
        "texture": {
          "type": "string"
        },
        "material": {
          "type": "string"
        },
        "color": {
          "$ref": "./types.schema.json#/definitions/Color"
        },
        "roughness": {
          "type": "number",
          "minimum": 0,
          "maximum": 1
        }
      },
      "additionalProperties": false
    },
    "NoiseFloorSurface": {
      "type": "object",
      "properties": {
        "color_base": {
          "$ref": "./types.schema.json#/definitions/Color"
        },
        "color_accent": {
          "$ref": "./types.schema.json#/definitions/Color"
        },
        "roughness": {
          "type": "number",
          "minimum": 0,
          "maximum": 1
        }
      },
      "additionalProperties": false
    },
    "FloorGeometry": {
      "type": "object",
      "properties": {
        "sides": {
          "type": "boolean"
        },
        "raise": {
          "type": "number",
          "minimum": -1,
          "maximum": 1
        }
      },
      "additionalProperties": false
    },
    "FloorNav": {
      "properties": {
        "blocked": {
          "type": "boolean"
        }
      },
      "additionalProperties": false
    }
  },
  "additionalProperties": false
}
