{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://viridia.org/faery/aspects.schema.json",
  "title": "Aspects",
  "description": "Aspect Schema",
  "type": "object",
  "properties": {
    "StdFloorSurface": {
      "type": "object",
      "properties": {
        "texture": {
          "type": "string"
        },
        "color": {
          "$ref": "./types.schema.json#/definitions/Color"
        },
        "unlit": {
          "type": "boolean"
        },
        "roughness": {
          "type": "number",
          "minimum": 0,
          "maximum": 1
        }
      },
      "additionalProperties": false
    },
    "NoiseFloorSurface": {
      "type": "object",
      "properties": {
        "color": {
          "$ref": "./types.schema.json#/definitions/Color"
        },
        "color_alt": {
          "$ref": "./types.schema.json#/definitions/Color"
        },
        "roughness": {
          "type": "number",
          "minimum": 0,
          "maximum": 1
        },
        "roughness_alt": {
          "type": "number",
          "minimum": 0,
          "maximum": 1
        }
      },
      "additionalProperties": false
    },
    "FloorGeometry": {
      "type": "object",
      "properties": {
        "sides": {
          "type": "boolean"
        },
        "raise": {
          "type": "number",
          "minimum": -1,
          "maximum": 1
        }
      },
      "additionalProperties": false
    },
    "FloorNav": {
      "properties": {
        "blocked": {
          "type": "boolean"
        }
      },
      "additionalProperties": false
    },
    "SceneryModels": {
      "type": "object",
      "properties": {
        "models": {
          "type": "array",
          "items": {
            "$ref": "./types.schema.json#/definitions/SceneryComponent"
          }
        }
      },
      "required": ["models"],
      "additionalProperties": false
    },
    "SceneryColliders": {
      "type": "object",
      "properties": {
        "colliders": {
          "type": "array",
          "items": {
            "$ref": "./types.schema.json#/definitions/ColliderDesc"
          }
        }
      },
      "required": ["colliders"],
      "additionalProperties": false
    },
    "SceneryMarks": {
      "type": "object",
      "properties": {
        "marks": {
          "patternProperties": {
            "^[a-zA-Z0-9_]+$": {
              "type": "array",
              "items": {
                "$ref": "./types.schema.json#/definitions/Vec3"
              }
            }
          }
        }
      },
      "required": ["marks"],
      "additionalProperties": false
    },
    "WallSize": {
      "type": "object",
      "properties": {
        "x": {
          "type": "integer",
          "minimum": 1
        },
        "y": {
          "type": "integer",
          "minimum": 1
        }
      },
      "required": ["x", "y"],
      "additionalProperties": false
    },
    "TerrainEffect": {
      "type": "object",
      "properties": {
        "effect": {
          "oneOf": [
            {
              "type": "string",
              "enum": ["soil", "path", "cobbles", "road", "stone"]
            },
            {
              "type": "array",
              "items": {
                "type": "string",
                "enum": ["soil", "path", "cobbles", "road", "stone"]
              }
            }
          ]
        },
        "effect_strength": {
          "type": "number",
          "minimum": 0,
          "maximum": 1
        },
        "elevation": {
          "type": "number",
          "minimum": -1,
          "maximum": 1
        },
        "continuous_x": {
          "type": "boolean"
        },
        "continuous_y": {
          "type": "boolean"
        }
      },
      "required": ["effect"],
      "additionalProperties": false
    },
    "TerrainHole": {
      "type": "object",
      "additionalProperties": false
    }
  },
  "additionalProperties": false
}
